@model Practica01_Lab.Models.Producto
@{
    ViewData["Title"] = "Producto";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Formulario de Producto</h1>
    
    <form asp-controller="Producto" asp-action="Create">
        
        <label asp-for="name" class="form-label"></label>
        <input asp-for="name" class="form-control" />

        <label asp-for="categoria" class="control-label"></label>
        Apto para todos
        <input asp-for="categoria" class="form-control" type="radio"value="AT"/>
        Solo para mayores de 18 a√±os
        <input asp-for="categoria" class="form-control" type="radio"value="+18"/>

        <label asp-for="precio" class="control-label"></label>
        <input asp-for="precio" class="form-control" />

        <label asp-for="descuento" class="control-label"></label>
        <input asp-for="descuento" class="form-control"/>

        


        <div class="form-group">
            <button type="submit" class="btn btn-primary">Registrar</button> 
        </div>
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Back to list</a>
    </div>
</div>